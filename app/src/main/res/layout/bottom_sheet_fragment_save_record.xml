<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_bottom_sheet"
    android:paddingHorizontal="@dimen/dp_24"
    android:paddingTop="@dimen/dp_30">


    <EditText
        android:id="@+id/edt_name_file"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_edt_timer"
        android:backgroundTint="@color/white"
        android:paddingVertical="@dimen/dp_10"
        android:paddingHorizontal="@dimen/dp_16"
        android:textColor="@color/black"
        android:textSize="@dimen/sp_14"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/cst_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/dp_16"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/dp_16"
        app:layout_constraintTop_toBottomOf="@id/edt_name_file">

        <TextView
            android:id="@+id/btn_save"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_16"
            android:layout_marginEnd="@dimen/dp_8"
            android:layout_weight="1"
            android:background="@drawable/bg_btn_save"
            android:backgroundTint="@color/white"
            android:fontFamily="@font/roboto_500"
            android:gravity="center"
            android:paddingVertical="@dimen/dp_13"
            android:text="@string/text_save"
            android:textColor="#D64C4C"
            android:textSize="@dimen/sp_14" />

        <TextView
            android:id="@+id/btn_cancel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_16"
            android:layout_weight="1"
            android:background="@drawable/bg_btn_save"
            android:backgroundTint="@color/white"
            android:fontFamily="@font/roboto_500"
            android:gravity="center"
            android:paddingVertical="@dimen/dp_13"
            android:text="@string/text_cancel"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_14" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>