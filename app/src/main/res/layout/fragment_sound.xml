<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_app">

    <RelativeLayout
        android:id="@+id/rl_appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/background_primary"
        android:paddingHorizontal="@dimen/dp_16"
        android:paddingTop="@dimen/dp_40"
        android:paddingBottom="@dimen/dp_16"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/btn_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/tv_title"
            android:layout_alignBottom="@id/tv_title"
            android:layout_alignParentStart="true"
            android:src="@drawable/ic_back" />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_16"
            android:layout_toEndOf="@id/btn_back"
            android:fontFamily="@font/roboto_700"
            android:text="@string/sound"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_18" />
    </RelativeLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_0"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/rl_appbar">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_sound"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_0"
            android:clipToPadding="false"
            android:layout_marginHorizontal="@dimen/dp_8"
            android:paddingVertical="@dimen/dp_12"
            app:layout_constraintBottom_toTopOf="@id/cstPlaySound"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cstPlaySound"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:paddingHorizontal="@dimen/dp_20"
            android:background="@drawable/bg_play_sound"
            android:paddingVertical="@dimen/dp_16"
            app:layout_constraintBottom_toBottomOf="parent">

            <TextView
                android:id="@+id/tv_name_sound"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:textSize="@dimen/sp_16"
                android:textColor="@color/white"
                android:fontFamily="@font/roboto_500"/>

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/iv_timer"
                android:src="@drawable/ic_timer"
                app:layout_constraintEnd_toStartOf="@id/iv_play"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginEnd="@dimen/dp_16"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/iv_play"
                android:src="@drawable/ic_play_sound"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_width="@dimen/dp_32"
                android:layout_height="@dimen/dp_32" />

            <TextView
                android:id="@+id/tv_duration"
                app:layout_constraintEnd_toStartOf="@id/iv_play"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginEnd="@dimen/dp_16"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_14"
                android:visibility="gone"
                android:fontFamily="@font/roboto_400"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>