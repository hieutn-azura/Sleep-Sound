<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_app">

    <RelativeLayout
        android:id="@+id/rl_appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/background_primary"
        android:paddingHorizontal="@dimen/dp_16"
        android:paddingTop="@dimen/dp_40"
        android:paddingBottom="@dimen/dp_16"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/btn_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/tv_title"
            android:layout_alignBottom="@id/tv_title"
            android:layout_alignParentStart="true"
            android:src="@drawable/ic_back" />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_16"
            android:layout_toEndOf="@id/btn_back"
            android:fontFamily="@font/roboto_700"
            android:text="@string/mix_sound"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_18" />
    </RelativeLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_0"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/rl_appbar">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_sound"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_0"
            android:layout_marginHorizontal="@dimen/dp_16"
            android:clipToPadding="false"
            android:orientation="vertical"
            android:paddingVertical="@dimen/dp_12"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:layout_constraintBottom_toTopOf="@id/cst_mix_sound"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cst_mix_sound"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_bottom_sheet"
            android:paddingHorizontal="@dimen/dp_16"
            android:paddingVertical="@dimen/dp_20"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent">

            <LinearLayout
                android:id="@+id/ln_sound_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:visibility="invisible"
                app:layout_constraintTop_toTopOf="parent">

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/iv_sound_1"
                    android:layout_width="@dimen/dp_40"
                    android:layout_height="@dimen/dp_40"
                    android:scaleType="centerCrop" />

                <androidx.appcompat.widget.AppCompatSeekBar
                    android:id="@+id/volume_sound_1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/dp_16"
                    android:layout_weight="1"
                    android:maxHeight="@dimen/dp_4"
                    android:minHeight="@dimen/dp_4"
                    android:progressBackgroundTint="@color/white"
                    android:progressDrawable="@drawable/progress_seekbar"
                    android:thumb="@drawable/sb_thumb"
                    app:thumbHeight="@dimen/dp_12"
                    app:thumbWidth="@dimen/dp_12"
                    tools:max="100"
                    tools:progress="50" />
                />

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/iv_remove_sound"
                    android:layout_width="@dimen/dp_20"
                    android:layout_height="@dimen/dp_20"
                    android:src="@drawable/ic_remove_sound" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ln_sound_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_16"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:visibility="invisible"
                app:layout_constraintTop_toBottomOf="@id/ln_sound_1">

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/iv_sound_2"
                    android:layout_width="@dimen/dp_40"
                    android:layout_height="@dimen/dp_40"
                    android:scaleType="centerCrop" />

                <androidx.appcompat.widget.AppCompatSeekBar
                    android:id="@+id/volume_sound_2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/dp_16"
                    android:layout_weight="1"
                    android:maxHeight="@dimen/dp_4"
                    android:minHeight="@dimen/dp_4"
                    android:progressBackgroundTint="@color/white"
                    android:progressDrawable="@drawable/progress_seekbar"
                    android:thumb="@drawable/sb_thumb"
                    app:thumbHeight="@dimen/dp_12"
                    app:thumbWidth="@dimen/dp_12"
                    tools:max="100"
                    tools:progress="50" />
                />

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/iv_remove_sound_2"
                    android:layout_width="@dimen/dp_20"
                    android:layout_height="@dimen/dp_20"
                    android:src="@drawable/ic_remove_sound" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ln_sound_3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_16"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:visibility="invisible"
                app:layout_constraintTop_toBottomOf="@id/ln_sound_2">

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/iv_sound_3"
                    android:layout_width="@dimen/dp_40"
                    android:layout_height="@dimen/dp_40"
                    android:scaleType="centerCrop" />

                <androidx.appcompat.widget.AppCompatSeekBar
                    android:id="@+id/volume_sound_3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/dp_16"
                    android:layout_weight="1"
                    android:maxHeight="@dimen/dp_4"
                    android:minHeight="@dimen/dp_4"
                    android:progressBackgroundTint="@color/white"
                    android:progressDrawable="@drawable/progress_seekbar"
                    android:thumb="@drawable/sb_thumb"
                    app:thumbHeight="@dimen/dp_12"
                    app:thumbWidth="@dimen/dp_12"
                    tools:max="100"
                    tools:progress="50" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/iv_remove_sound_3"
                    android:layout_width="@dimen/dp_20"
                    android:layout_height="@dimen/dp_20"
                    android:src="@drawable/ic_remove_sound" />
            </LinearLayout>

            <TextView
                android:id="@+id/btn_save"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_20"
                android:background="@drawable/bg_btn_save"
                android:backgroundTint="@color/white"
                android:fontFamily="@font/roboto_500"
                android:paddingHorizontal="@dimen/dp_60"
                android:paddingVertical="@dimen/dp_12"
                android:text="@string/text_save"
                android:textColor="@color/text_save"
                android:textSize="@dimen/sp_16"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/ln_sound_3" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>