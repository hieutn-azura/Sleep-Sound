<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Text_400">
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/roboto_400</item>
        <item name="android:textSize">@dimen/sp_12</item>
    </style>

    <style name="Text_500">
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/roboto_500</item>
        <item name="android:textSize">@dimen/sp_12</item>
    </style>

    <style name="Text_600">
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/roboto_600</item>
        <item name="android:textSize">@dimen/sp_12</item>
    </style>

    <style name="Text_700">
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/roboto_700</item>
        <item name="android:textSize">@dimen/sp_12</item>
    </style>

    <style name="AdFullScreen" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@color/black</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:windowTranslucentStatus">false</item>
        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>
    </style>

    <style name="TabTextStyle" parent="TextAppearance.Design.Tab">
        <item name="textAllCaps">false</item>
    </style>

    <style name="corner_12">
        <item name="cornerSize">@dimen/dp_12</item>
    </style>
</resources>
